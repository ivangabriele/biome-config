{
	"$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
	"files": {
		"ignore": ["./.yarn/*", "./build/*", "./dist/*", "./node_modules/*"]
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"rules": {
			"all": true,
			"style": {
				"useFilenamingConvention": "off"
			}
		}
	},
	"overrides": [
		{
			"include": ["./config/**"],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off"
					}
				}
			}
		}
	]
}
